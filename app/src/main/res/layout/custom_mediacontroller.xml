<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2c2c2c">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <ImageButton
        android:id="@+id/backward_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#2c2c2c"
        android:scaleType="fitCenter"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/backward_button" />

    <ImageButton
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#2c2c2c"
        android:scaleType="fitCenter"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/selector_image" />

    <ImageButton
        android:id="@+id/forward_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#2c2c2c"
        android:scaleType="fitCenter"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/fast_forward_button" />




</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#2c2c2c">

            <TextView
                android:id="@+id/now_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="00:00/00:00"
                android:textColor="#ffffff" />

            <SeekBar
                android:id="@+id/play_seek"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="8" />

            <ImageButton
                android:id="@+id/full_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#2c2c2c"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/full_screen_button" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>